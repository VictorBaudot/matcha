<% include header %>
<h1>Bienvenue sur le profil de <%= infos_user.login %></h1>
<div class="ui small relaxed divided list">
    <div class="item">
        <i class="user icon"></i>
        <div class="content">
            <%= infos_user.prenom %> <%= infos_user.nom %>, alias <%= infos_user.login %>
        </div>
    </div>
    <div class="item">
        <i class="marker icon"></i>
        <div class="content">
            <%= infos_user.localisation %>
        </div>
    </div>
    <div class="item">
        <i class="hand spock icon"></i>
        <div class="content">
            <%= infos_user.age %>
        </div>
    </div>
    <div class="item">
        <i class="venus mars icon"></i>
        <div class="content">
            <%= infos_user.genre %>
        </div>
    </div>
    <div class="item">
        <i class="heartbeat icon"></i>
        <div class="content">
            <%= infos_user.orientation %>
        </div>
    </div>
    <div class="item">
        <i class="tags icon"></i>
        <div class="content">
            <%= interests %>
        </div>
    </div>
    <div class="item">
        <i class="paper plane icon"></i>
        <div class="content">
            <%= infos_user.bio %>
        </div>
    </div>
</div>
<div class="ui three column grid">
    <div class="column">
        <form action="/like" method="post" class="ui form">
            <input type="text" value="<%= infos_user.id %>" name="bg_id" hidden>
            <button type="submit" class="ui red button">
            <%  if (!liked) { %>
                <i class="heart icon"></i> Liker
            <% } else { %>
                <i class="heart icon"></i> Ne plus liker
            <% } %>
            </button>
        </form>
    </div>
    <div class="column">
        <form action="/block" method="post" class="ui form">
            <input type="text" value="<%= infos_user.id %>" name="bg_id" hidden>
            <button type="submit" class="ui black button">
            <%  if (!blocked) { %>
                <i class="lock icon"></i> Bloquer
            <% } else { %>
                <i class="lock icon"></i> Debloquer
            <% } %>
            </button>
        </form>
    </div>
    <div class="column">
        <form action="/report" method="post" class="ui form">
            <input type="text" value="<%= infos_user.id %>" name="bg_id" hidden>
            <button type="submit" class="ui grey button">
            <%  if (!reported) { %>
                <i class="minus circle icon"></i> Signaler
            <% } else { %>
                <i class="minus circle icon"></i> Ne plus signaler
            <% } %>
            </button>
        </form>
    </div>
</div>
<% include footer %>