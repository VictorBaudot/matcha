<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD1BJh8Wr--cY3PkcqAdl1XIxfJdpNr72Q&libraries=places"></script>
<form onkeypress="return event.keyCode != 13;" action="/modify_profile" method="post" class="ui equal width form">
    <div class="fields">
        <div class="field">
            <label>Pseudo</label>
            <input type="text" placeholder="Pseudo" name="login">
        </div>
        <div class="field">
            <label>Prenom</label>
            <input type="text" placeholder="Prenom" name="prenom">
        </div>
        <div class="field">
            <label>Nom</label>
            <input type="text" placeholder="Nom" name="nom">
        </div>
    </div>

    <div class="fields">
        <div class="field">
            <label>Age</label>
            <input type="number" placeholder="24" min="16" max="30" value="" name="age">
        </div>
        <div class="field">
            <label>Localisation</label>
            <input type="text" id="lat" name="lat" hidden/>
            <input type="text" id="lng" name="lng" hidden/>
            <input type="text" id="txtPlaces" placeholder="Localisation" name="localisation"/>
        </div>
    </div>

    <div class="fields">
        <div class="field">
            <label>Genre</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="genre">
                <i class="dropdown icon"></i>
                <div class="default text">Genre</div>
                <div class="menu">
                    <div class="item" data-value="Homme">Homme</div>
                    <div class="item" data-value="Femme">Femme</div>
                </div>
            </div>
        </div>
        <div class="field">
            <label>Orientation sexuelle</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="orientation">
                <i class="dropdown icon"></i>
                <div class="default text">Orientation</div>
                <div class="menu">
                    <div class="item" data-value="Bi">Bi</div>
                    <div class="item" data-value="Hetero">Hetero</div>
                    <div class="item" data-value="Homo">Homo</div>
                </div>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Bio</label>
        <textarea rows="2" placeholder="Blabla..." name="bio"></textarea>
    </div>

    <div class="field">
        <label>Interets</label>
        <div class="ui fluid multiple search selection dropdown">
            <input name="interests" type="hidden">
            <i class="dropdown icon"></i>
            <div class="default text">Interets</div>
            <div class="menu">
                <% for (tag of tags) { %>
                        <div class="item" data-value="<%= tag.interest %>"><%= tag.interest %></div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="field">
        <label>E-mail</label>
        <input type="email" placeholder="batman@arkham.city" name="email">
    </div>

    <div class="fields">
        <div class="field">
            <label>Nouveau mot de passe</label>
            <input type="password" placeholder="Mot de passe" name="password">
        </div>
        <div class="field">
            <label>Confirmation</label>
            <input type="password" placeholder="Mot de passe" name="confirm">
        </div>
    </div>
    
    <button type="submit" class="ui blue submit button" value="submit">
        Modifier
    </button>
</form>
<script>
        $('.ui.dropdown').dropdown();
        $('.ui.multiple.search.dropdown').dropdown({allowAdditions: true});
</script>
<% if (!infos_user.localisation) { %>
    <script type="text/javascript" src="/assets/geo.js"></script>
<% } %>
<script type="text/javascript" src="/assets/geo_autocomplete.js"></script>
