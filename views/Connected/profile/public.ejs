<div class="ui small images">
    <img src="/assets/pics/<%= infos_user.pp %>">
    <img src="/assets/pics/<%= infos_user.p2 %>">
    <img src="/assets/pics/<%= infos_user.p3 %>">
</div>

<div class="ui small relaxed divided list">
    <div class="item">
        <i class="user icon"></i>
        <div class="content">
            <%= infos_user.prenom %> <%= infos_user.nom %>, alias <%= infos_user.login %>
        </div>
    </div>
    <% if (infos_user.login === user.login) { %>
    <div class="item">
        <i class="mail icon"></i>
        <div class="content">
            Private: <%= infos_user.email %>
        </div>
    </div>
    <% } %>
    <div class="item">
        <i class="marker icon"></i>
        <div class="content">
            <%= infos_user.localisation %>
        </div>
    </div>
    <div class="item">
        <i class="hand spock icon"></i>
        <div class="content">
            <%= infos_user.age %>
        </div>
    </div>
    <div class="item">
        <i class="venus mars icon"></i>
        <div class="content">
            <%= infos_user.genre %>
        </div>
    </div>
    <div class="item">
        <i class="heartbeat icon"></i>
        <div class="content">
            <%= infos_user.orientation %>
        </div>
    </div>
    <div class="item">
        <i class="tags icon"></i>
        <div class="content">
            <%= interests %>
        </div>
    </div>
    <div class="item">
        <i class="paper plane icon"></i>
        <div class="content">
            <%= infos_user.bio %>
        </div>
    </div>
</div>